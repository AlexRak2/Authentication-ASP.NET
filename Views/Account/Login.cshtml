@model TaskManagement.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<svg xmlns="http://www.w3.org/2000/svg" class="d-none">
    <symbol id="check2" viewBox="0 0 16 16">
        <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
    </symbol>
</svg>

<main class="d-flex" style = "min-height: 100vh;">

    <div class="form-signin w-100 m-auto bg-dark text-white rounded shadow" style="max-width: 400px;">
        <div class="d-flex justify-content-center">
            <div class="fs-2"> Authenticator App </div>
        </div>


        <hr class="border-secondary" />

        <form asp-action="Login">
            <h1 class="h3 mb-3 fw-normal text-center">Please sign in</h1>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="UserNameOrEmail" class="form-control bg-dark text-white border-secondary">
                <label class="text-secondary">Email address or Username</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control bg-dark text-white border-secondary" placeholder="Password">
                <label class="text-secondary">Password</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">Sign in</button>

            <div class="text-center mt-3">
                <span>Don't have an account? <a asp-action="Registration" class="text-info">Sign Up</a></span>
            </div>

            <hr class="border-secondary" />

            <div class="d-flex flex-column align-items-center">
                <button type="button" class="login-with-google-btn" onclick=" location.href='@Url.Action("LoginGoogle", "Account")'">
                    Sign in with Google
                </button>
            </div>
            <p class="mt-5 mb-3 text-center text-secondary">&copy; 2024</p>
        </form>
    </div>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
